<link rel="stylesheet" type="text/css" href="/css/forgot_password.css">
<div class="main-container">
    <div class="title-edit">
        <h1>Reset Your Password for <%= email %>
        </h1>
    </div>
    <div class="form-container">
        <form action="" method="POST">
            <div class="form-style">
                <input class="form-style-place" type="password" name="password" placeholder="Password" required>
                <input class="form-style-place" type="password" name="confirm_password" placeholder="Confirm Password"
                    required>
                <input class="enter" type="submit" value="Reset">
            </div>
        </form>
    </div>
</div>