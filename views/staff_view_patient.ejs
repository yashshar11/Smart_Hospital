<link rel="stylesheet" type="text/css" href="/css/staff_search_inventory.css">
<% if(locals.user){ %>
    <div class="main-container">
        <!-- isko bhi side mai as a list add krio -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">

                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">

                        <a class="nav-link" href=" /staff/update">Sell Medicine <span
                                class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item ">

                        <a class="nav-link" href=" /staff/search">Search Inventory <span
                                class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item active">

                        <a class="nav-link" href=" /staff/patient">View Patient <span
                                class="sr-only">(current)</span></a>
                    </li>


                </ul>
            </div>
        </nav>
        <div class="container-fluid">

            <table border="1" style="text-align: center;">
                <thead>
                    <th>Sno.</th>
                    <th>Token Number</th>
                    <th>Patient Name</th>
                    <th>Mobile Number</th>
                    <th>Email</th>
                    <th>Prescribed By</th>
                    <th>Report Image</th>
                </thead>
                <tbody>
                    <% let i=1; %>
                        <% for(report of reports){%>
                            <tr>
                                <td>
                                    <%= i %>
                                </td>
                                <td>
                                    <%= report.token %>
                                </td>
                                <td>
                                    <%= report.name%>
                                </td>
                                <td>
                                    <%= report.number %>
                                </td>
                                <td>
                                    <%= report.email %>
                                </td>
                                <td>
                                    Dr. <%= report.doctorName %>
                                </td>
                                <td>
                                    <div class="modal fade" id="myModal<%=i%>" role="dialog">
                                        <div class="modal-dialog modal-xl">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    <button type="button" class="close"
                                                        data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Name: <%= report.name%>
                                                    </h4>
                                                    <hr>
                                                    <p class="modal-title">Token: <%= report.token%>
                                                    </p>
                                                    <p class="modal-title">Prescribed By: <%= report.doctorName%>
                                                    </p>
                                                    <p><a target="_blank" href="<%= report.canvasImage %>">Report</a>
                                                    </p>
                                                    <hr>
                                                    <img src="<%= report.canvasImage%>" alt="reportimage">
                                                    <hr>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal"
                                        data-target="#myModal<%=i%>">Report</button>
                                </td>
                            </tr>
                            <% i++; } %>
                </tbody>
            </table>
        </div>
    </div>

    <% } %>