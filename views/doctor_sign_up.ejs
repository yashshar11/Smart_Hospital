<link rel="stylesheet" type="text/css" href="/css/staff_signup.css">
<div class="main-container">
    <% if(locals.user){ %>
        <div class="main-container">
            <div>
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                            <li class="nav-item ">

                                <a class="nav-link " href=" /admin/add-inventory">Add Inventory <span
                                        class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">

                                <a class="nav-link" href=" /admin/search">Search Inventory <span
                                        class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">

                                <a class="nav-link" href=" /admin/selldata">Selling Details</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href=" /admin/staff-sign-up">Staff Details</button></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href=" /admin/doctor-sign-up">Doctor Details</button></a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <%}%>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6">
                            <div class="title-edit">
                                <h1>Doctor Sign-Up</h1>
                            </div>

                            <div class="form-container">
                                <form action="/admin/doctor/create" method="POST">
                                    <div class="form-style">
                                        <div class="input-set">
                                            <input class="form-style-place" type="email" name="email"
                                                placeholder="Email" required>
                                            <input class="form-style-place" type="text" name="name" placeholder="Name"
                                                required>
                                        </div>

                                        <div class="input-set">
                                            <input class="form-style-place" type="text" name="mobile"
                                                placeholder="Mobile Number" required>
                                            <input class="form-style-place" type="text" name="education"
                                                placeholder="Education / Qualification" required>
                                        </div>

                                        <div class="input-set">
                                            <input class="form-style-place" type="text" name="specialization"
                                                placeholder="Specialization" required>
                                            <input class="form-style-place" type="number" name="experience"
                                                placeholder="Experience(in years)" required>
                                        </div>

                                        <div class="input-set">
                                            <input class="form-style-place" type="number" name="fee"
                                                placeholder="Fee Per Consultation" required>
                                            <select class="form-style-place" name="timings" required>
                                                <option value="" disabled selected hidden>Shift Timings</option>
                                                <option value="8">8.00 AM - 2.00 PM</option>
                                                <option value="14">2.00 PM - 8.00 PM</option>
                                            </select>
                                        </div>



                                        <div class="input-set">
                                            <input class="form-style-place" type="password" name="password"
                                                placeholder="Password" required>
                                            <input class="form-style-place" type="password" name="confirm_password"
                                                placeholder="Confirm Password" required>
                                        </div>
                                        <input class="enter" type="submit" value="Sign-Up">
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-6">
                            <table border="1" style="text-align: center; ">
                                <thead>
                                    <th>Sno.</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Edit</th>
                                    <th></th>
                                </thead>
                                <tbody>
                                    <% let i=1 %>
                                        <% for(info of doctor){%>
                                            <tr>

                                                <td>
                                                    <%= i++%>
                                                </td>
                                                <td>
                                                    <%= info.name %>
                                                </td>
                                                <td>
                                                    <%= info.email%>
                                                </td>
                                                <td>
                                                    <div class="modal fade" id="myModal<%=i%>" role="dialog">
                                                        <div class="modal-dialog modal-xl">
                                                            <div class="modal-content">
                                                                <div class="modal-body">
                                                                    <button type="button" class="close"
                                                                        data-dismiss="modal">&times;</button>
                                                                    <div class="title-edit">
                                                                        <h1>Update Password</h1>
                                                                    </div>
                                                                    <div class="form-container">
                                                                        <form action="/admin/doctor/update-profile"
                                                                            method="POST">
                                                                            <hr>
                                                                            <p class="modal-title">Email: <%=
                                                                                    info.email%>
                                                                            </p>
                                                                            <p class="modal-title">Name: <%= info.name%>
                                                                            </p>
                                                                            <hr>
                                                                            <div class="form-style">
                                                                                <div class="input-set">
                                                                                    <input class="form-style-place"
                                                                                        type="hidden" name="id"
                                                                                        value="<%= info.id%>">
                                                                                    <input class="form-style-place"
                                                                                        type="email" name="email"
                                                                                        placeholder="Email"
                                                                                        value="<%= info.email%>"
                                                                                        required>
                                                                                    <input class="form-style-place"
                                                                                        type="text" name="name"
                                                                                        placeholder="Name"
                                                                                        value="<%= info.name%>"
                                                                                        required>
                                                                                </div>

                                                                                <div class="input-set">
                                                                                    <input class="form-style-place"
                                                                                        type="text" name="mobile"
                                                                                        placeholder="Mobile Number"
                                                                                        value="<%= info.mobile%>"
                                                                                        required>
                                                                                    <input class="form-style-place"
                                                                                        type="text" name="education"
                                                                                        placeholder="Education / Qualification"
                                                                                        value="<%= info.education%>"
                                                                                        required>
                                                                                </div>

                                                                                <div class="input-set">
                                                                                    <input class="form-style-place"
                                                                                        type="text"
                                                                                        name="specialization"
                                                                                        placeholder="Specialization"
                                                                                        value="<%= info.specialization%>"
                                                                                        required>
                                                                                    <input class="form-style-place"
                                                                                        type="number" name="experience"
                                                                                        placeholder="Experience(in years)"
                                                                                        value="<%= info.experience%>"
                                                                                        required>
                                                                                </div>

                                                                                <div class="input-set">
                                                                                    <input class="form-style-place"
                                                                                        type="number" name="fee"
                                                                                        placeholder="Fee Per Consultation"
                                                                                        value="<%= info.fee%>" required>
                                                                                    <select class="form-style-place"
                                                                                        name="timings"
                                                                                        value="<%= info.timings%>"
                                                                                        required>
                                                                                        <option value="" disabled hidden
                                                                                            <%=info.timings ? ''
                                                                                            : 'selected' %>>Shift
                                                                                            Timings</option>
                                                                                        <option value="8"
                                                                                            <%=info.timings==='8'
                                                                                            ? 'selected' : '' %>>8.00 AM
                                                                                            - 2.00 PM</option>
                                                                                        <option value="14"
                                                                                            <%=info.timings==='14'
                                                                                            ? 'selected' : '' %>>2.00 PM
                                                                                            - 8.00 PM</option>
                                                                                    </select>
                                                                                </div>




                                                                                <input class="enter" type="submit"
                                                                                    value="Update">
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <img src="/images/edit.png" data-toggle="modal"
                                                        data-target="#myModal<%=i%>" class="img-clickable">
                                                </td>
                                                <td><a href="/admin/doctor-destroy/<%= info.id %>"><img
                                                            src="/images/delete.png"></a></td>
                                            </tr>
                                            <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        </div>